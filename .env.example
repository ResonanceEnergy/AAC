# Coinbase Pro
COINBASE_API_KEY=
COINBASE_API_SECRET=
COINBASE_PASSPHRASE=

# Kraken
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# DEX / Web3
ETH_PRIVATE_KEY=
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# ===========================================
# SERVICE TOKENS
# ===========================================

# BigBrain Intelligence
BIGBRAIN_AUTH_TOKEN=
