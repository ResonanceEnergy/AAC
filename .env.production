# ============================================================
# Accelerated Arbitrage Corp - Production Environment Template
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================

# ============================================================
# SYSTEM MODE
# ============================================================
# Paper trading simulates orders without real money
PAPER_TRADING=true

# Dry run logs orders but doesn't execute them (even simulated)
DRY_RUN=false

# Debug mode enables verbose logging
DEBUG_MODE=false

# ============================================================
# RISK MANAGEMENT (Critical - Review carefully!)
# ============================================================
# Maximum position size in USD
MAX_POSITION_SIZE=1000

# Maximum number of concurrent positions
MAX_POSITIONS=5

# Daily loss limit - system stops trading if exceeded
DAILY_LOSS_LIMIT=500

# Default stop loss percentage (e.g., 2.0 = 2%)
DEFAULT_STOP_LOSS_PCT=2.0

# Default take profit percentage
DEFAULT_TAKE_PROFIT_PCT=4.0

# ============================================================
# EXCHANGE CREDENTIALS - BINANCE
# ============================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true
BINANCE_ENABLED=false

# ============================================================
# EXCHANGE CREDENTIALS - COINBASE
# ============================================================
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_SANDBOX=true
COINBASE_ENABLED=false

# ============================================================
# EXCHANGE CREDENTIALS - KRAKEN
# ============================================================
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here
KRAKEN_ENABLED=false

# ============================================================
# DATA SOURCES
# ============================================================
# CoinGecko (free tier has rate limits)
COINGECKO_API_KEY=

# Etherscan for on-chain data
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Twitter/X API (for sentiment analysis)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API (for sentiment analysis)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# ============================================================
# DATABASE
# ============================================================
# SQLite database path (relative to project root)
DATABASE_PATH=data/accounting.db

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=INFO
LOG_FILE=logs/acc.log

# ============================================================
# THEATER CONFIGURATION
# ============================================================
# Enable/disable individual theaters
THEATER_B_ENABLED=true
THEATER_C_ENABLED=true
THEATER_D_ENABLED=true

# Theater scan intervals (seconds)
THEATER_B_INTERVAL=60
THEATER_C_INTERVAL=300
THEATER_D_INTERVAL=600

# ============================================================
# ORCHESTRATOR
# ============================================================
# Minimum signal strength to trigger action (0.0 - 1.0)
MIN_SIGNAL_STRENGTH=0.6

# Minimum number of confirming signals required
MIN_CONFIRMING_SIGNALS=2

# Signal expiry time (seconds)
SIGNAL_EXPIRY=300

# ============================================================
# ALERTS & NOTIFICATIONS (Optional)
# ============================================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=

# Email alerts
ALERT_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
